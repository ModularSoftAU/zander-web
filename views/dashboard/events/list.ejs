<%- include("../../modules/dashboard/header.ejs", {
    pageTitle: pageTitle,
    pageDescription: "List and publish all events for the community to attend."
}) %>

<%- include("../../modules/dashboard/sidebar.ejs") %>

<%- include("../../modules/dashboard/navigation.ejs") %>

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <h4>Events</h4>
                                <a href="/dashboard/events/create"><button type="button" class="btn btn-sm btn-info">Schedule Event</button></a>
                            </div>
                            <div class="card-body">
                                <% if (req.cookies.alertType) { %>
                                    <%- include("../../partials/alert.ejs", {
                                      alertType: req.cookies.alertType,
                                      content: req.cookies.alertContent
                                    }) %>
                                <% } %>
                                <div class="table-responsive">
                                    <table class="table table-hover table-responsive-sm">
                                        <thead>
                                            <tr>
                                                <th>Display Name</th>
                                                <th>Icon</th>
                                                <th>Date & Time</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (apiData.success == false) { %>
                                                <%- include("../../partials/alert.ejs", {
                                                  alertType: "danger",
                                                  content: apiData.message
                                                }) %>
                                            <% } else { %>
                                                <% apiData.data.forEach(function (event) { %>
                                                    <tr>
                                                        <td><%= event.name %></td>
                                                        <td><img src="<%= event.icon %>" height="40px" alt="" draggable="false"></td>
                                                        <td><code><%= moment(event.eventDateTime).format('MMMM Do YYYY, h:mm a') %></code></td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <% if (event.published === 1) { %>
                                                                    <button class="btn btn-sm btn-success" disabled type="button">Published</button>
                                                                <% } else { %>
                                                                    <form action="/dashboard/events/publish" method="post">
                                                                        <input type="hidden" name="eventId" value="<%= event.eventId %>">
                                                                        <button class="btn btn-sm btn-info" type="submit">Publish</button>
                                                                    </form>
                                                                <% } %>

                                                                <a href="/dashboard/events/edit?id=<%= event.eventId %>"><button class="btn btn-sm btn-warning" type="button">Edit</button></a>

                                                                <form action="/dashboard/events/delete" method="post">
                                                                    <input type="hidden" name="eventId" value="<%= event.eventId %>">
                                                                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                                                </form>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

<%- include("../../modules/dashboard/footer.ejs") %>