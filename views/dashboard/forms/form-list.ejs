<%- include("../../modules/header.ejs", {
    pageTitle: pageTitle,
    pageDescription: "List of all Network Forms"
}) %>

<%- include("../../modules/navigationBar.ejs") %>

<%- include("../../partials/miniHeader.ejs", {
  headerTitle: "Forms",
  backgroundImage: globalImage
}) %>

<div class="row dashboardview">
    <div class="col-md-2">
      <%- include("../../modules/dashboard/dashboard-sidebar.ejs") %>
    </div>
    <div class="col-md-10" style="padding: 10px;">
        <a href="/dashboard/forms/create"><button type="button" class="btn btn-sm btn-info">Create Form</button></a>
        <%- include("../../partials/documentationLink.ejs", {
            doclink: "https://modularsoft.org/docs/products/zander/features/form/"
        }) %>
        <br><br>

        <% if (req.cookies.alertType) { %>
            <%- include("../../partials/alert.ejs", {
              alertType: req.cookies.alertType,
              content: req.cookies.alertContent
            }) %>
        <% } %>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (apiData.success == false) { %>
                    <%- include("../../partials/alert.ejs", {
                      alertType: "danger",
                      content: apiData.message
                    }) %>
                <% } else { %>
                    <% apiData.data.forEach(function (form) { %>
                        <tr>
                            <td><i class="<%= form.displayIcon %>"></i></td>
                            <td><%= form.displayName %></td>
                            <td>
                                <% if (form.formStatus === 1) { %>
                                    <i class="fas fa-check-circle" style="color:green"></i>
                                <% } else { %>
                                    <i class="fas fa-times-circle" style="color: red;"></i>
                                <% } %>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/dashboard/forms/edit?id=<%= form.formId %>"><button class="btn btn-sm btn-warning" type="button">Edit</button></a>

                                    <form action="<%= process.env.siteAddress %>/redirect/form/delete" method="post">
                                        <input type="hidden" name="formId" value="<%= form.formId %>">
                                        <input type="hidden" name="actioningUser" value="<%= req.session.user.userId %>">
                                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
  </div>

<%- include("../../modules/footer.ejs") %>