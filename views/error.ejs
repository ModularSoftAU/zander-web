<%- include("modules/header.ejs", {
    pageTitle: pageTitle,
    pageDescription: "An error has occured and cannot load this page."
}) %>

<%- include("modules/navigationBar.ejs") %>

<%- include("partials/miniHeader.ejs", {
  headerTitle: "Server Error",
  backgroundImage: "../images/banner/error.png"
}) %>


<section class="section">
    <div class="container">
      <div class="row">
        <div class="col-sm" style="min-height:500px;">
          <div class="text-center">
            <img class="floating" style="margin-top:10px;" src="images/errorSideImage.png" height="400px" draggable="false">
          </div>
        </div>
        <div class="col-sm" style="margin-right:100px;">    
          <h3>There was an error ;-;</h3>
          <code><%= error.message %></code>

          <br><br><br>
          <small class="text-muted">If this continues to happen, please report this by either <a style="color: rgb(75, 64, 224);" href="mailto:<%= config.siteConfiguration.email %>">e-mailing our Support Team</a> or <a style="color: rgb(75, 64, 224);" href="/discord">join our Community Discord and open a ticket</a>.</small>
        </div>
      </div>
    </div>
</section>

<%- include("modules/footer.ejs") %>  